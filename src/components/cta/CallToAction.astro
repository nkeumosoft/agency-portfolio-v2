---
import s from "../../assets/images/scale.jpg"
import { Button } from "../ui/button"
---

<div class="cta flex flex-col items-center h-dvh w-dvw justify-center bg-white overflow-x-hidden">
  <div class="cta-mobile w-full h-full bg-green-100 md:hidden flex justify-center">
    <div class=" flex flex-col items-center w-full gap-[30px] h-full justify-center bg-black/35">
      <h2 class="text-white text-5xl font-bold capitalize text-center">Ready to Transform Your Business?</h2>
      <p class="text-white text-3xl text-center">Let's discuss how our technical expertise can help you achieve your business goals.</p>
      <div class="button-wrapper">
          <Button variant='outline' size="lg" className="rounded-full w-full">Let's talk</Button>
      </div>
  </div>
  </div>
  <div class="inner hidden w-full h-full md:flex flex-col items-center justify-center relative">
    <div
      class="left overflow-x-hidden flex items-center justify-center gap-7 w-full"
    >
      <h1
        class="capitalize text-nowrap break-keep font-normal md:font-medium text-[100px] md:text-[170px] text-black"
      >
        Modern problems
      </h1>
      <h1
        class="capitalize text-nowrap break-keep font-normal md:font-medium text-[100px] md:text-[170px] text-black"
      >
        engineered answers.
      </h1>
    </div>
    <div
      class="right overflow-hidden flex items-center justify-start gap-7 w-full"
    >
      <h1
        class="capitalize text-nowrap break-keep font-normal md:font-medium text-[100px] md:text-[170px] text-black"
      >
        Seamless experiences
      </h1>
      <h1
        class="capitalize text-nowrap break-keep font-normal md:font-medium text-[100px] md:text-[170px] text-black"
      >
        From idea to execution.
      </h1>
    </div>
    <div class="flex items-center justify-center absolute top-0 left-0 w-full h-full">
        <div class="box grow-container bg-top bg-cover bg-no-repeat flex opacity-0 items-center justify-center w-2/3 h-1/3 md:w-1/3 md:h-1/2">
            <div class="box-inner px-3 flex flex-col items-center w-full gap-[30px] h-full justify-center bg-black/35">
                <h2 class="text-white text-5xl font-bold capitalize text-center">Ready to Transform Your Business?</h2>
                <p class="text-white text-3xl text-center">Let's discuss how our technical expertise can help you achieve your business goals.</p>
                <div class="button-wrapper">
                    <Button variant='outline' size="lg" className="rounded-full w-full">Let's talk</Button>
                </div>
            </div>
        </div>
    </div>
  </div>
</div>
<script>
  import { gsap, ScrollTrigger } from "@/utils/gsap";
  let box = document.querySelector<HTMLElement>(".cta .box"),
    trigger = document.querySelector(".cta"),
    mm = gsap.matchMedia();
  
  mm.add('(min-width:800px)', () => {
     //text timeline
  const textTl = () => {
    let ttl = gsap.timeline();
    ttl
      .to(".cta .left", {
        xPercent: 50,
        duration: 1.5,
      })
      .to(
        ".cta .right",
        {
          xPercent: -50,
          duration: 1.5,
        },
        "<"
      );
    return ttl;
  };

  //video container timeline
  let videoTl = () => {
    let vtl = gsap.timeline();
    vtl
      .set(box, {
        opacity: 1,
      })
      .from(box, {
        yPercent: 100,
      })
      .to(
        box,
        {
          width: "100dvw",
          height: "100dvh",
          duration: 1.2,
          willChange:'height, width, transform'
        },
        "-=0.3"
      )
      .from('.box-inner', {
        opacity: 0
      })

    return vtl;
  };

  //global timeline
  let globalT = gsap.timeline({
    scrollTrigger: {
      trigger,
      start: "top top",
      end: "+=4000",
      pin: true,
      anticipatePin: 1,
      scrub: 1,
      pinSpacing: true
    },
  });

  globalT.add(textTl()).add(videoTl(), "<");
  })
</script>
